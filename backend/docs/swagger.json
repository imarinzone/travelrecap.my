{
    "swagger": "2.0",
    "info": {
        "description": "API for retrieving travel location data filtered by year",
        "title": "Travel Recap API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/api/place-locations": {
            "get": {
                "description": "Get place locations, optionally filtered by year. If year is not provided, returns all locations.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "locations"
                ],
                "summary": "Get place locations",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Filter locations by year (e.g., 2023)",
                        "name": "year",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of place locations",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/main.PlaceLocation"
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid year parameter",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Database error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "main.PlaceLocation": {
            "type": "object",
            "properties": {
                "city": {
                    "type": "string"
                },
                "country": {
                    "type": "string"
                },
                "lat": {
                    "type": "number"
                },
                "lng": {
                    "type": "number"
                },
                "place_id": {
                    "type": "string"
                }
            }
        }
    }
}